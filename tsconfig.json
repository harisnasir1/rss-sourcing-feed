{
 "compilerOptions": {
    "target": "ES2020",               // modern JS features
    "module": "CommonJS",             // Node uses CommonJS
    "rootDir": "src",                 // where your TS code lives
    "outDir": "dist",                 // compiled JS output
    "strict": true,                   // enable strict type-checking
    "esModuleInterop": true,          // import express cleanly
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
